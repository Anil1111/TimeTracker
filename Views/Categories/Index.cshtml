@model IEnumerable<TimeTracker.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<p>
    <a asp-action="Create">Create New Category</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <input id="demo_vertical" type="number" value="" name="demo_vertical"> Minutes
                    <script>
                    $("input[name='demo_vertical']").TouchSpin({
                       @* initval: 40  *@
                  verticalbuttons: true
                });
                    </script>
                </td>


                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    @*   <a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
@using (Html.BeginForm("Submit", "CategoriesController", FormMethod.Post))
{

    <input type="submit" value="Save" />

}
